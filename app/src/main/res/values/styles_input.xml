<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="VirtualBankTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCollapsedPaddingTop">8dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="boxBackgroundColor">@color/colorSurface</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintEnabled">true</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.TextInputLayout</item>
        <item name="errorIconDrawable">@null</item>
        <item name="hintTextAppearance">@style/TextAppearance.VirtualBank.Body.Large</item>
        <item name="android:textColorHint">@color/colorOnSurface</item>
        <item name="helperTextTextAppearance">@style/VirtualBankTextInputHelperTextAppearance</item>
        <item name="helperTextTextColor">@color/colorOnSurfaceVar</item>
        <item name="errorTextAppearance">@style/VirtualBankTextInputErrorTextAppearance</item>
        <item name="errorTextColor">@color/colorError</item>
    </style>

    <style name="VirtualBankTextInputHelperTextAppearance" parent="@style/TextAppearance.VirtualBank.Body.Small">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOnSurfaceVar</item>
        <item name="android:lineSpacingExtra">-2sp</item>
    </style>

    <style name="VirtualBankTextInputErrorTextAppearance" parent="@style/TextAppearance.VirtualBank.Body.Small">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorError</item>
        <item name="android:lineSpacingExtra">-2sp</item>
    </style>


    <style name="ThemeOverlay.App.TextInputLayout" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorError</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="textAppearanceCaption">@style/TextAppearance.App.Caption</item>
        <item name="editTextStyle">@style/Widget.MaterialComponents.TextInputLayout.FilledBox</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/exo2_medium</item>
        <item name="android:fontFamily">@font/exo2_medium</item>
    </style>

    <style name="TextAppearance.App.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/exo2_medium</item>
        <item name="android:fontFamily">@font/exo2_medium</item>
    </style>
    <style name="CustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>