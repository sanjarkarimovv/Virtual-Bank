<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tv_title_input_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#858689"
        android:textSize="10sp"
        android:padding="5dp"
        android:fontFamily="@font/exo2_semi_bold"
        android:textStyle="bold"
        android:layout_marginStart="14dp"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_card"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/tv_title_input_card"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:strokeWidth="1dp"
        app:strokeColor="@color/colorOutline"
        android:backgroundTint="@color/static_white">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">


            <com.vicmikhailau.maskededittext.MaskedEditText
                android:id="@+id/met_card_phone_number"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.88"
                android:backgroundTint="@android:color/transparent"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/exo2_semi_bold"
                android:textColor="@color/colorScrim"
                app:mask="### ### ### ###"
                android:inputType="number"
                />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.12">
                <ImageView
                    android:id="@+id/iv_scan_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:saveEnabled="false"
                    android:src="@drawable/ic_credit_card_scan"
                    android:padding="10dp"
                    android:layout_gravity="center"/>
            </FrameLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>



</RelativeLayout>