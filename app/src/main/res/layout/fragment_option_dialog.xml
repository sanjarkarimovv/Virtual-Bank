<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp"
    android:backgroundTint="@color/colorPrimary">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/main_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/ic_launcher_foreground"
                android:id="@+id/dialog2_icon"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:id="@+id/dialog2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dialog title"
                android:textSize="24sp"
                android:fontFamily="@font/exo2_semi_bold"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp" />
            <TextView
                android:id="@+id/dialog2_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Basic dialog2 message"
                android:textSize="14sp"
                android:fontFamily="@font/exo2_semi_bold"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/dialog_checklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog2_actions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/main_ll"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/dialog2_action1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_semi_bold"
                android:text="Action1"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/dialog2_action2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_semi_bold"
                android:text="Action2"
                android:textSize="14sp"
                android:layout_marginEnd="24dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>