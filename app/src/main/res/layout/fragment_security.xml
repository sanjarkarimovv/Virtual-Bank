<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="64dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_trusted_device"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_medium"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_right_24"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorSecondary"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_change_password"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_medium"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_right_24"
            tools:ignore="ContentDescription" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSecondary"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_change_pin_code"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_medium"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/ic_right_24"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_biometric_login"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_medium"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />

        <Switch
            android:id="@+id/biometric_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorOnPrimaryFixed"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSecondary"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_payment_configuration"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_medium"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />

        <Switch
            android:id="@+id/payment_confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorOnPrimaryFixed"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_use_geolocation"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_medium"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />

        <Switch
            android:id="@+id/using_geolocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorOnPrimaryFixed"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_blocking_while_closing"
            android:textColor="@color/colorOnSurface"
            android:textSize="16sp"
            android:fontFamily="@font/exo2_medium"
            android:layout_centerVertical="true"
            tools:ignore="RelativeOverlap" />

        <Switch
            android:id="@+id/automatic_blocking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:buttonTint="@color/colorOnPrimaryFixed"
            tools:ignore="UseSwitchCompatOrMaterialXml,TouchTargetSizeCheck" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_auto_block"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="12dp">
        <SeekBar
            android:id="@+id/sb_auto_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_auto_block_time"
            android:progressTint="@color/colorSecondary"
            android:thumbTint="@color/colorOnPrimaryFixed"
            android:max="60"
            android:min="0"
            tools:ignore="UnusedAttribute" />
        <TextView
            android:id="@+id/tv_auto_block_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="30"
            android:textSize="16sp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorOnSurface"
            android:layout_toStartOf="@id/tv_sek"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/tv_sek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="сек"
            android:textSize="16sp"
            android:layout_marginEnd="12dp"
            android:textColor="@color/colorOnSurface"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            tools:ignore="HardcodedText" />
    </RelativeLayout>
</LinearLayout>