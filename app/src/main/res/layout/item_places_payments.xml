<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginBottom="8dp">

    <LinearLayout
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/ripple_effect_transparent"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            android:backgroundTint="@color/static_white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp">
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:importantForAccessibility="no"
                tools:src="@drawable/odil_logo"
                android:layout_margin="16dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="ODIL SCHOOL QORAKO'L - Yunusobod"
                android:textColor="@color/colorScrim"
                android:textSize="16sp"
                android:textStyle="bold"
                android:lines="1"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Yunosobod tumani, Bodomzor mahalla, mo'ljal Bodomzor masjid"
                android:textColor="@color/colorOutline"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:lines="2"/>
            <androidx.cardview.widget.CardView
                android:layout_width="48dp"
                android:layout_height="20dp"
                app:cardCornerRadius="16dp"
                android:backgroundTint="@color/colorOutlineVariant"
                android:layout_marginTop="4dp"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="370 m"
                    android:textSize="10sp"
                    android:layout_gravity="center"
                    android:textColor="@color/colorScrim"
                    android:textStyle="bold"
                    tools:ignore="SmallSp" />
            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorScrim"
                android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>