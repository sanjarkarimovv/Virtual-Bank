<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <uz.androbeck.virtualbank.ui.customViews.toolbar.CustomToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/str_requisites" />
    <TextView
        android:id="@+id/txt_fish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F.I.Sh"
        android:layout_below="@id/toolbar"
        android:layout_marginStart="15dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/exo2_medium"
        android:textColor="@color/colorOutline"
       />
    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_fish"
        android:text="Abbosbek Normuratov"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/exo2_bold"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/txt_date_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kartaning amal qilish \n muddati:"
        android:layout_below="@id/txt_name"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/exo2_medium"
        android:textColor="@color/colorOutline"
        />
    <TextView
        android:id="@+id/txt_date_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_date_card"
        android:text="00/00"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/exo2_bold"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/txt_card_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_date_value"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/exo2_medium"
        android:text="Karta raqami"
        android:textColor="@color/colorOutline" />

    <TextView
        android:id="@+id/txt_card_number_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@id/txt_card_number"
        android:fontFamily="@font/exo2_bold"
        android:text="0000000000000" />
    <TextView
        android:id="@+id/txt_name_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_card_number_value"
        android:layout_marginTop="10dp"
        android:layout_marginStart="15dp"
        android:fontFamily="@font/exo2_medium"
        android:text="Karta nomi"
        android:textColor="@color/colorOutline" />

    <TextView
        android:id="@+id/txt_name_card_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_below="@id/txt_name_card"
        android:fontFamily="@font/exo2_bold"
        android:text="Uzcard" />

    <ImageView
        android:id="@+id/eye_icon"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_below="@id/txt_date_value"
        android:layout_marginStart="70dp"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@+id/txt_card_number"
        android:src="@drawable/ic_eye" />

</RelativeLayout>