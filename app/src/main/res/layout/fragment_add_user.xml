<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="16dp"
            android:padding="5dp"
            android:src="@drawable/ic_arrow_left_short"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/exo2_medium"
            android:padding="6dp"
            android:text="Превод средств"
            android:textColor="@color/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_toolbar_title"
        android:layout_alignParentBottom="true"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/rl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">




            <uz.androbeck.virtualbank.ui.customViews.inputs.CustomViewEnterCardOrPhoneNumber
                android:id="@+id/et_card_or_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_container"
                android:layout_marginTop="20dp"
                tools:ignore="NotSibling" />


            <uz.androbeck.virtualbank.ui.customViews.inputs.CustomViewInputCardView
                android:id="@+id/et_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:masHintText="Владелец"
                app:editTextInCus="Владелец"
                android:layout_below="@id/et_card_or_phone_number"
                android:layout_marginTop="20dp" />

            <CheckBox
                android:id="@+id/check_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/et_comment"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/check_icon"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/et_comment"
                android:textSize="16sp"
                android:text="В избранное"/>




            <uz.androbeck.virtualbank.ui.customViews.buttons.VirtualBankProgressButton
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/exo2_semi_bold"
                android:gravity="center"
                android:text="Продолжить"
                android:textSize="20sp"
               android:saveEnabled="true" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
