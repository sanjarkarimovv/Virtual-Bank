<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ll_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    android:paddingBottom="32dp"
    android:paddingTop="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="50dp"
        android:layout_height="5dp"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"
        android:layout_marginBottom="12dp"
        app:cardCornerRadius="2.5dp"
        android:backgroundTint="@color/colorOutline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_title_app_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewStart"
            android:text="@string/application_language"
            android:padding="8dp"
            android:textColor="@color/colorOnSurface"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:textSize="18sp"
            android:fontFamily="@font/exo2_semi_bold"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/language_uzb"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_title_Uzb"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/str_localization_uzb"
            android:textColor="@color/colorOnSurface"
            android:layout_marginStart="8dp"
            android:textSize="16sp"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/change_language_uzb"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginHorizontal="12dp"
            tools:ignore="TouchTargetSizeCheck,DuplicateSpeakableTextCheck" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/language_rus"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_title_Rus"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/str_localization_rus"
            android:textColor="@color/colorOnSurface"
            android:layout_marginStart="8dp"
            android:textSize="16sp"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/change_language_rus"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginHorizontal="12dp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/language_eng"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/tv_title_Eng"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@string/str_localization_eng"
            android:textColor="@color/colorOnSurface"
            android:layout_marginStart="8dp"
            android:textSize="16sp"/>

        <com.google.android.material.materialswitch.MaterialSwitch
            android:id="@+id/change_language_eng"
            android:layout_width="wrap_content"
            android:layout_height="12dp"
            android:layout_gravity="center_vertical|end"
            android:layout_marginHorizontal="12dp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>



</LinearLayout>