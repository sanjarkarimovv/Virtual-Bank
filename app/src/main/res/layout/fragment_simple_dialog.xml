<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="28dp"
    app:cardElevation="0dp"
    android:backgroundTint="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:background="@drawable/ic_launcher_foreground"
            android:id="@+id/dialog_icon"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"/>
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic dialog title"
            android:textSize="24sp"
            android:fontFamily="@font/exo2_semi_bold"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:layout_below="@id/dialog_icon"/>
        <TextView
            android:id="@+id/dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Basic dialog message"
            android:textSize="14sp"
            android:fontFamily="@font/exo2_semi_bold"
            android:layout_below="@id/dialog_title"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="24dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_message"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/dialog_action1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_semi_bold"
                android:text="Action1"
                android:textSize="14sp"
                android:layout_marginEnd="16dp"/>
            <TextView
                android:id="@+id/dialog_action2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/exo2_semi_bold"
                android:text="Action2"
                android:textSize="14sp"
                android:layout_marginEnd="24dp"/>
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>