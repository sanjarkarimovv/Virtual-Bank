<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/static_white">

    <uz.androbeck.virtualbank.ui.customViews.toolbar.CustomToolBar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <uz.androbeck.virtualbank.ui.customViews.inputs.CustomOutlinedTextField
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        app:boxStrokeColor="@color/colorBlue"
        app:boxStrokeRadius="20dp"
        app:focusable="true"
        app:hintText="@string/str_first_name"
        app:labelColor="@color/colorBlue" />

    <uz.androbeck.virtualbank.ui.customViews.inputs.CustomOutlinedTextField
        android:id="@+id/tv_last_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_name"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        app:boxStrokeColor="@color/colorBlue"
        app:boxStrokeRadius="20dp"
        app:hintText="@string/str_last_name"
        app:labelColor="@color/colorBlue" />

    <uz.androbeck.virtualbank.ui.customViews.inputs.CustomOutlinedTextField
        android:id="@+id/tv_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_last_name"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="30dp"
        app:boxStrokeColor="@color/colorBlue"
        app:boxStrokeRadius="20dp"
        app:hintText="@string/str_nick_name"
        app:labelColor="@color/colorBlue" />

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginTop="20dp"
        android:background="@drawable/ripple_effect_fot_text_view"
        android:clickable="true"
        android:drawablePadding="10dp"
        android:focusable="true"
        android:paddingHorizontal="10dp"
        android:paddingVertical="20dp"
        android:text="+998 95 058 06 27"
        android:textSize="16sp"
        app:drawableEndCompat="@drawable/ic_next"
        app:drawableStartCompat="@drawable/ic_phone" />

    <TextView
        android:id="@+id/tv_delete_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_phone_number"
        android:layout_marginTop="20dp"
        android:background="@drawable/ripple_effect_fot_text_view"
        android:clickable="true"
        android:focusable="true"
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:text="@string/str_delete_account"
        android:textColor="@color/colorRed"
        android:textSize="16sp"
        app:drawableEndCompat="@drawable/ic_next" />

</RelativeLayout>