<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/ll_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_left_short"
            android:padding="5dp"
            android:visibility="gone"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Превод средств"
            android:textSize="18sp"
            android:padding="6dp"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/exo2_bold"
            android:textStyle="bold"
            android:textColor="@color/colorOnSurface"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_toolbar_title"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/exo2_bold"
                android:text="Кому:"
                android:textColor="@color/colorOnSurface"
                android:textStyle="bold" />

            <uz.androbeck.virtualbank.ui.customViews.inputs.CustomViewEnterCardOrPhoneNumber
                android:id="@+id/et_card_or_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_text"
                android:layout_marginTop="20dp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_saved_users"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/et_card_or_phone_number"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/rv_saved_users"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/exo2_bold"
                android:text="Все получатли:"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorPrimaryFixedDim"
                android:textStyle="bold" />



    <uz.androbeck.virtualbank.ui.customViews.buttons.VirtualBankProgressButton
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/exo2_semi_bold"
                android:gravity="center"
                android:visibility="gone"
                android:text="Продолжить"
                android:textSize="20sp" />
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
