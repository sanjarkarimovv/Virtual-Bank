<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_rv_shape">

    <androidx.cardview.widget.CardView
        android:layout_width="40dp"
        android:layout_height="3dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/colorOutline"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:background="@android:color/transparent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_scanner_by_camera"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/colorSurfaceDim">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_camera"
                    android:padding="20dp"/>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/str_camera_by_scanner"
                android:gravity="center"
                android:textColor="@color/colorScrim"
                android:textSize="12sp"
                android:fontFamily="@font/exo2_medium"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="180dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/btn_scanner_by_nfc"
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="35dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp"
                app:cardBackgroundColor="@color/colorSurfaceDim">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_nfc"
                    android:padding="20dp"/>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/str_nfc_by_scanner"
                android:gravity="center"
                android:textColor="@color/colorScrim"
                android:textSize="12sp"
                android:fontFamily="@font/exo2_medium"
                android:layout_marginTop="16dp"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>