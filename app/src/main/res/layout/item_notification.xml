<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="8dp">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ripple_effect"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/in_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/exo2_medium"
            android:textColor="@color/colorOutline"
            android:textSize="14sp"
            tools:text="17.08.2024      20:35" />

        <ImageView
            android:id="@+id/iv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/not_test3"
            android:layout_below="@id/in_time"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@id/btn_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_more_horiz"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:maxLines="2"
            android:fontFamily="@font/exo2_medium"
            tools:text="@string/str_you_money_transfer"
            android:textColor="@color/colorScrim"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/exo2_medium"
            android:maxLines="2"
            android:textColor="@color/colorOutline"
            android:textSize="14sp"
            tools:text="Islom dan 1000 so'm o'tkazma qilindi Islom dan 1000 so'm o'tkazma qilindi" />

        <TextView
            android:id="@+id/btn_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/tv_description"
            android:fontFamily="@font/exo2_medium"
            android:padding="4dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            tools:text="@string/str_open_chek"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:background="@drawable/ripple_effect"
            android:clickable="true"
            android:focusable="true" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>