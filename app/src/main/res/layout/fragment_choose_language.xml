<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/exo2_bold_italic"
        android:gravity="center"
        android:text="@string/str_choose_language_title"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/ll_uz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_uz"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorScrim"
                android:fontFamily="@font/exo2_medium"
                android:text="@string/str_localization_uzb"
                android:textSize="17sp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_uz"
                android:layout_width="wrap_content"
                android:layout_marginEnd="16dp"
                android:clickable="false"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_ru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_ru"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:textColor="@color/colorScrim"
                android:fontFamily="@font/exo2_medium"
                android:text="@string/str_localization_rus"
                android:textSize="17sp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_ru"
                android:layout_width="wrap_content"
                android:layout_marginEnd="16dp"
                android:clickable="false"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_en"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_en"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/colorScrim"
                android:layout_marginStart="16dp"
                android:fontFamily="@font/exo2_medium"
                android:text="@string/str_localization_eng"
                android:textSize="17sp" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_en"
                android:layout_width="wrap_content"
                android:layout_marginEnd="16dp"
                android:clickable="false"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <uz.androbeck.virtualbank.ui.customViews.buttons.VirtualBankButton
        android:id="@+id/btn_choose"
        style="@style/VirtualBankButton.Filled"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/str_choose_title"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>