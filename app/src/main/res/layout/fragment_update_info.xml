<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackgroundColor">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/name_root"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/static_white"
        app:strokeWidth="0.8dp">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/exo2_semi_bold"
            android:hint="@string/str_first_name"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/last_name_root"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/name_root"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/static_white"
        app:strokeWidth="0.8dp">

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/exo2_semi_bold"
            android:hint="@string/str_last_name"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/last_name_root"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="20dp"
        app:strokeColor="@color/colorPrimary">

        <com.vicmikhailau.maskededittext.MaskedEditText
            android:id="@+id/tv_date"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:gravity="start|center_vertical"
            android:hint="dd-mm-yyyy"
            android:paddingHorizontal="30dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:mask="04-04-0404" />

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:padding="6dp"
            android:src="@drawable/ic_date" />
    </com.google.android.material.card.MaterialCardView>

    <DatePicker
        android:id="@+id/date_picker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:calendarViewShown="false"
        android:datePickerMode="spinner" />
</RelativeLayout>