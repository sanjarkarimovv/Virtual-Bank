<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBackgroundColor">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/name_root"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="40dp"
        app:cardBackgroundColor="@color/static_white"
        app:strokeWidth="1dp">

        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/exo2_semi_bold"
            android:hint="@string/str_first_name"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/last_name_root"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/name_root"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/static_white"
        app:strokeWidth="1dp">

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/exo2_semi_bold"
            android:hint="@string/str_last_name"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp" />
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/gen_and_date_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name_root"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:strokeColor="@color/colorPrimary">

            <com.vicmikhailau.maskededittext.MaskedEditText
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:gravity="start|center_vertical"
                android:hint="dd-mm-yyyy"
                android:paddingHorizontal="20dp"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                app:mask="##-##-####" />

            <ImageView
                android:id="@+id/btn_date_pick"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:background="@drawable/ripple_for_image_back"
                android:clickable="true"
                android:focusable="true"
                android:padding="6dp"
                android:src="@drawable/ic_date" />
        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:strokeColor="@color/colorPrimary">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_gender"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="4dp"
                    android:layout_toStartOf="@+id/avatar_root"
                    android:gravity="center"
                    android:maxLength="10"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Noma'lum" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/avatar_root"
                    android:layout_width="44dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    app:cardCornerRadius="25dp"
                    app:cardElevation="0dp">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/avatar_female" />
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/gen_and_date_root"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/iv_ic_telephone"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/ic_telephone" />

        <TextView
            android:id="@+id/tv_title_telephone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/iv_ic_next"
            android:layout_toEndOf="@+id/iv_ic_telephone"
            android:text="@string/str_phone_number"
            android:textColor="@color/colorSecondary"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title_telephone_number"
            android:layout_toStartOf="@+id/iv_ic_next"
            android:layout_toEndOf="@+id/iv_ic_telephone"
            android:text="+998"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_ic_next"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_next" />
    </RelativeLayout>

    <!--    <DatePicker-->
    <!--        android:id="@+id/date_picker"-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_alignParentBottom="true"-->
    <!--        android:calendarViewShown="false"-->
    <!--        android:datePickerMode="spinner" />-->
</RelativeLayout>