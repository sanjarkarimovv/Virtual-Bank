<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        app:cardCornerRadius="18dp"
        android:backgroundTint="@color/colorOnErrorContainer"
        android:layout_width="match_parent"
        android:layout_height="230dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessLeaf">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/photo_1"
                android:scaleType="centerCrop"/>
            <RelativeLayout
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/card_logo"
                    android:scaleType="fitStart"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/img_uzcard_logo"/>
                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BAXTIYOROV ISLOM OROL OGLI"
                    android:textColor="@color/static_white"
                    android:fontFamily="@font/exo2_medium"
                    android:layout_below="@+id/card_logo"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/card_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4 743.00"
                    android:textColor="@color/static_white"
                    android:fontFamily="@font/exo2_semi_bold"
                    android:layout_below="@+id/card_name"
                    android:textSize="26sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/sum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sum"
                    android:textColor="@color/static_white"
                    android:fontFamily="@font/exo2_semi_bold"
                    android:layout_toEndOf="@id/card_balance"
                    android:layout_above="@id/user_full_name"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="4dp"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/user_full_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BAXTIYOROV ISLOM OROL OGLI"
                    android:textColor="@color/static_white"
                    android:fontFamily="@font/exo2_medium"
                    android:layout_below="@+id/card_balance"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"/>
                <androidx.cardview.widget.CardView
                    android:id="@+id/card_important"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_below="@id/user_full_name"
                    app:cardCornerRadius="20dp"
                    android:backgroundTint="@color/screenTextColor">
                    <TextView
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Main"
                        android:textColor="@color/static_white"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5614 68** **** 4567"
                    android:textColor="@color/static_white"
                    android:fontFamily="@font/exo2_medium"
                    android:layout_below="@+id/card_important"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
                <TextView
                    android:id="@+id/expire_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="02/27"
                    android:textColor="@color/static_white"
                    android:fontFamily="@font/exo2_medium"
                    android:layout_marginStart="10dp"
                    android:layout_toRightOf="@id/card_number"
                    android:layout_below="@+id/card_important"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"/>
            </RelativeLayout>


        </FrameLayout>
    </androidx.cardview.widget.CardView>


</FrameLayout>