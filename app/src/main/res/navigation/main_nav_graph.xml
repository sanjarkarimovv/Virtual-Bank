<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="uz.androbeck.virtualbank.ui.screens.bottom_nav_items.main.MainFragment"
        android:label="MainFragment" />
    <fragment
        android:id="@+id/transferFragment"
        android:name="uz.androbeck.virtualbank.ui.screens.bottom_nav_items.transfer.TransferFragment"
        android:label="TransferFragment" />
    <fragment
        android:id="@+id/cardsFragment"
        android:name="uz.androbeck.virtualbank.ui.screens.bottom_nav_items.cards.CardsFragment"
        android:label="CardsFragment" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="uz.androbeck.virtualbank.ui.screens.bottom_nav_items.profile.ProfileFragment"
        android:label="ProfileFragment" >
        <action
            android:id="@+id/action_profileFragment_to_changeLanguageFragment"
            app:destination="@id/changeLanguageFragment" />
        <action
            android:id="@+id/action_profileFragment_to_changeThemeFragment"
            app:destination="@id/changeThemeFragment" />
    </fragment>
    <fragment
        android:id="@+id/historyFragment"
        android:name="uz.androbeck.virtualbank.ui.screens.bottom_nav_items.history.HistoryFragment"
        android:label="HistoryFragment" />
    <dialog
        android:id="@+id/changeLanguageFragment"
        android:name="uz.androbeck.virtualbank.ui.screens.change_language.ChangeLanguageFragment"
        android:label="ChangeLanguageFragment"
        tools:layout="@layout/fragment_change_language"/>
    <dialog
        android:id="@+id/changeThemeFragment"
        android:name="uz.androbeck.virtualbank.ui.dialogs.enter_verify_code.change_theme.ChangeThemeDialog"
        android:label="ChangeThemeFragment"
        tools:layout="@layout/dialog_change_theme"/>
</navigation>