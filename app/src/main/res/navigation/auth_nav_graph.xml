<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/chooseLanguageFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="uz.androbeck.virtualbank.ui.screens.auth.login.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_registrationAddPersonalInfoFragment"
            app:destination="@id/registrationAddPersonalInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/registrationFragment"
        android:name="uz.androbeck.virtualbank.ui.screens.auth.registration.RegistrationFragment"
        android:label="RegistrationFragment" />

    <fragment
        android:id="@+id/chooseLanguageFragment"
        android:name="uz.androbeck.virtualbank.ui.screens.choose_language.ChooseLanguageFragment"
        android:label="ChooseLanguageFragment">
        <action
            android:id="@+id/action_chooseLanguageFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/registrationAddPersonalInfoFragment"
        android:name="uz.androbeck.virtualbank.ui.screens.auth.registration.RegistrationAddPersonalInfoFragment"
        android:label="RegistrationAddPersonalInfoFragment" >
        <action
            android:id="@+id/action_registrationAddPersonalInfoFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
    </fragment>

</navigation>